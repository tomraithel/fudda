<h1>Receipes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Persons</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipes.each do |receipe| %>
      <tr>
        <td><%= receipe.title %></td>
        <td><%= receipe.persons %></td>
        <td class="action"><%= link_to 'Show', receipe, {class: 'btn btn-primary btn-xs'} %></td>
        <td class="action"><%= link_to 'Edit', edit_receipe_path(receipe), {class: 'btn btn-default btn-xs'} %></td>
        <td class="action"><%= link_to 'Destroy', receipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipe', new_receipe_path, {class: 'btn btn-lg btn-primary'} %>
