<%= form_for(meal) do |f| %>
  <%= render partial: 'shared/form_errors', locals: {model: @meal} %>

  <div class="form-group form-group--date">
    <%= f.label :day %>
    <%= f.date_select :day, {}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :receipe_id %>
    <%= f.select :receipe_id, Receipe.all.order(:title).collect {|receipe| [receipe.title, receipe.id]}, {}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.submit({class: 'btn btn-primary'}) %>
  </div>
<% end %>
