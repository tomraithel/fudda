<%= form_for(product) do |f| %>

  <%= render partial: 'shared/form_errors', locals: {model: @product} %>


  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, {class: 'form-control', placeholder: 'z.B. Mehl'} %>
  </div>

  <div class="form-group">
    <%= f.submit({class: 'btn btn-primary'}) %>
  </div>
<% end %>
