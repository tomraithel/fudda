<h1>Products</h1>

<%= link_to 'New Product', new_product_path, {class: 'btn btn-lg btn-primary'} %>

<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td class="action"><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default btn-xs' %></td>
        <td class="action"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, {class: 'btn btn-lg btn-primary'} %>
